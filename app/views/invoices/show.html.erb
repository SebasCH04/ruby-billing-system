<p style="color: green"><%= notice %></p>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 20px;
  }

  .modern-container {
    max-width: 1000px;
    margin: 0 auto;
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    overflow: hidden;
  }

  .modern-header {
    background: #ffffff;
    padding: 30px 40px;
    border-bottom: 1px solid #e5e7eb;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .modern-header h1 {
    color: #000000;
    font-size: 28px;
    font-weight: 600;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .modern-content {
    padding: 40px;
  }

  .invoice-info-section {
    background: #2a2a2e;
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 30px;
  }

  .invoice-lines-section {
    background: #1f1f23;
    border: 1px solid #374151;
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 30px;
  }

  .section-title {
    color: #e5e7eb;
    font-size: 20px;
    font-weight: 600;
    margin: 0 0 20px 0;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .invoice-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-bottom: 20px;
  }

  .detail-item {
    background: #1f1f23;
    padding: 16px;
    border-radius: 8px;
    border: 1px solid #374151;
  }

  .detail-label {
    font-size: 12px;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
    font-weight: 500;
  }

  .detail-value {
    font-weight: 600;
    color: #e5e7eb;
    font-size: 16px;
  }

  .invoice-table {
    width: 100%;
    border-collapse: collapse;
    background: #2a2a2e;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 20px;
  }

  .invoice-table th {
    background: #374151;
    color: #e5e7eb;
    padding: 16px;
    text-align: left;
    font-weight: 600;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .invoice-table td {
    padding: 16px;
    border-bottom: 1px solid #374151;
    color: #d1d5db;
  }

  .invoice-table tbody tr:hover {
    background: #374151;
  }

  .invoice-table tbody tr:last-child td {
    border-bottom: none;
  }

  .totals-section {
    background: #2a2a2e;
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 30px;
  }

  .totals-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
  }

  .total-item {
    background: #1f1f23;
    padding: 16px;
    border-radius: 8px;
    border: 1px solid #374151;
    text-align: center;
  }

  .total-item.final-total {
    background: #065f46;
    border-color: #059669;
  }

  .total-item.final-total .detail-value {
    color: #10b981;
    font-size: 18px;
  }

  .btn {
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-align: center;
  }

  .btn:hover {
    transform: translateY(-1px);
    text-decoration: none;
  }

  .btn-secondary {
    background: #6b7280;
    color: white;
  }

  .btn-secondary:hover {
    background: #4b5563;
    color: white;
  }

  .btn-warning {
    background: #f59e0b;
    color: white;
  }

  .btn-warning:hover {
    background: #d97706;
    color: white;
  }

  .btn-danger {
    background: #ef4444;
    color: white;
  }

  .btn-danger:hover {
    background: #dc2626;
    color: white;
  }

  .action-buttons {
    display: flex;
    gap: 12px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    padding: 30px 40px;
    background: f8fafc;
    border-top: 1px solid #e5e7eb;
    border-radius: 0 0 12px 12px;
  }

  .empty-state {
    text-align: center;
    padding: 40px 20px;
    color: #9ca3af;
  }

  .empty-state h3 {
    color: #d1d5db;
    margin-bottom: 8px;
  }

  @media (max-width: 768px) {
    body {
      padding: 10px;
    }

    .modern-header {
      flex-direction: column;
      text-align: center;
      padding: 20px;
    }

    .modern-content {
      padding: 20px;
    }

    .invoice-info-section,
    .invoice-lines-section,
    .totals-section {
      padding: 20px;
    }

    .action-buttons {
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    .action-buttons .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }

    .invoice-table {
      font-size: 14px;
    }

    .invoice-table th,
    .invoice-table td {
      padding: 12px 8px;
    }
  }
</style>

<div class="modern-container">
  <div class="modern-header">
    <h1>📄 Invoice Details</h1>
  </div>

  <div class="modern-content">
    <!-- Invoice Information Section -->
    <div class="invoice-info-section">
      <div class="section-title">
        📋 Invoice Information
      </div>
      <div class="invoice-details">
        <div class="detail-item">
          <div class="detail-label">Client</div>
          <div class="detail-value"><%= @invoice.client.try(:name) || 'No client assigned' %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label">Invoice Number</div>
          <div class="detail-value"><%= @invoice.number %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label">Issued Date</div>
          <div class="detail-value"><%= @invoice.issued_at&.strftime("%B %d, %Y") || 'Not set' %></div>
        </div>
      </div>
    </div>

    <!-- Invoice Lines Section -->
    <div class="invoice-lines-section">
      <div class="section-title">
        📊 Invoice Items
      </div>
      
      <% if @invoice.invoice_items.any? %>
        <table class="invoice-table">
          <thead>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Unit Price</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <% @invoice.invoice_items.each do |item| %>
              <tr>
                <td><%= item.product.try(:name) || 'Unknown Product' %></td>
                <td><%= item.quantity %></td>
                <td><%= number_to_currency(item.unit_price) %></td>
                <td><%= number_to_currency(item.quantity * item.unit_price) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <div class="empty-state">
          <h3>No items in this invoice</h3>
          <p>Invoice items will appear here when they are added.</p>
        </div>
      <% end %>
    </div>

    <!-- Totals Section -->
    <div class="totals-section">
      <div class="section-title">
        💰 Invoice Totals
      </div>
      <div class="totals-grid">
        <div class="total-item">
          <div class="detail-label">Subtotal</div>
          <div class="detail-value"><%= number_to_currency(@invoice.subtotal) %></div>
        </div>
        <div class="total-item">
          <div class="detail-label">Tax Rate</div>
          <div class="detail-value">
            <%= @invoice.tax_rate&.name || 'No tax' %>
            <% if @invoice.tax_rate&.rate %>
              (<%= @invoice.tax_rate.rate %>%)
            <% end %>
          </div>
        </div>
        <div class="total-item">
          <div class="detail-label">Tax Amount</div>
          <div class="detail-value"><%= number_to_currency(@invoice.tax_total) %></div>
        </div>
        <div class="total-item final-total">
          <div class="detail-label">Final Total</div>
          <div class="detail-value"><%= number_to_currency(@invoice.total) %></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="action-buttons">
    <%= link_to "← Back to Invoices", invoices_path, class: "btn btn-secondary" %>
    <%= link_to "✏️ Edit Invoice", edit_invoice_path(@invoice), class: "btn btn-warning" %>
    <%= button_to "🗑️ Delete Invoice", @invoice,
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this invoice? This action cannot be undone." },
                  class: "btn btn-danger" %>
  </div>
</div>