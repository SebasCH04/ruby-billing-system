<p style="color: green"><%= notice %></p>

<% content_for :title, "Invoices" %>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 20px;
  }

  .modern-container {
    max-width: 1200px;
    margin: 0 auto;
    background: #2a2a2a;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    overflow: hidden;
  }

  .modern-content {
    padding: 40px;
  }

  .page-title {
    color: #ffffff;
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 30px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .modern-secondary-actions {
    display: flex;
    gap: 12px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .btn {
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-align: center;
  }

  .btn:hover {
    transform: translateY(-1px);
    text-decoration: none;
  }

  .btn-primary {
    background: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background: #2563eb;
    color: white;
  }

  .btn-secondary {
    background: #4a5568;
    color: white;
  }

  .btn-secondary:hover {
    background: #2d3748;
    color: white;
  }

  .btn-success {
    background: #10b981;
    color: white;
  }

  .btn-success:hover {
    background: #059669;
    color: white;
  }

  .btn-info {
    background: #06b6d4;
    color: white;
  }

  .btn-info:hover {
    background: #0891b2;
    color: white;
  }

  .btn-danger {
    background: #ef4444;
    color: white;
  }

  .btn-danger:hover {
    background: #dc2626;
    color: white;
  }

  .btn-sm {
    padding: 6px 12px;
    font-size: 12px;
  }

  .modern-invoices-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }

  .invoice-card {
    background: #3a3a3a;
    border: 1px solid #4a4a4a;
    border-radius: 12px;
    padding: 24px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    transition: all 0.2s ease;
  }

  .invoice-card:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
  }

  .invoice-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 16px;
    gap: 16px;
  }

  .invoice-number {
    font-size: 18px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 4px;
  }

  .invoice-date {
    font-size: 14px;
    color: #a0a0a0;
  }

  .invoice-amount {
    font-size: 20px;
    font-weight: 600;
    color: #10b981;
    text-align: right;
  }

  .invoice-details {
    margin: 16px 0;
    font-size: 14px;
    color: #d0d0d0;
  }

  .invoice-details strong {
    color: #ffffff;
  }

  .invoice-actions {
    display: flex;
    gap: 8px;
    margin-top: 16px;
    flex-wrap: wrap;
  }

  .status-badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 8px;
    display: inline-block;
  }

  .status-paid {
    background: #065f46;
    color: #10b981;
  }

  .status-pending {
    background: #92400e;
    color: #fbbf24;
  }

  .status-overdue {
    background: #991b1b;
    color: #f87171;
  }

  .empty-state {
    grid-column: 1 / -1;
    text-align: center;
    padding: 60px 20px;
    color: #a0a0a0;
  }

  .empty-state h3 {
    margin-bottom: 8px;
    color: #ffffff;
  }

  @media (max-width: 768px) {
    .page-title {
      flex-direction: column;
      text-align: center;
    }

    .modern-secondary-actions {
      flex-direction: column;
    }

    .modern-content {
      padding: 20px;
    }

    .modern-invoices-grid {
      grid-template-columns: 1fr;
    }

    .invoice-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .invoice-amount {
      text-align: left;
    }
  }
</style>

<div class="modern-container">
  <div class="modern-content">
    <div class="page-title">
      <span>Invoice Management Software</span>
      <%= link_to "+ New Invoice", new_invoice_path, class: "btn btn-success" %>
    </div>

    <div class="modern-secondary-actions">
      <%= link_to "🏠 Back to Products", products_path, class: "btn btn-secondary" %>
    </div>

    <div class="modern-invoices-grid" id="invoices">
      <% if @invoices.any? %>
        <% @invoices.each do |invoice| %>
          <div class="invoice-card">
            <div class="invoice-header">
              <div>
                <div class="invoice-number">Invoice #<%= invoice.id %></div>
                <div class="invoice-date">
                  <%= invoice.created_at.strftime("%B %d, %Y") if invoice.created_at %>
                </div>
              </div>
              <div class="invoice-amount">
                <%= number_to_currency(invoice.total) if invoice.respond_to?(:total) %>
              </div>
            </div>

            <div class="invoice-details">
              <% if invoice.respond_to?(:client) && invoice.client %>
                <strong>Client:</strong> <%= invoice.client.name %><br>
              <% end %>
              <% if invoice.respond_to?(:status) %>
                <span class="status-badge status-<%= invoice.status&.downcase || 'pending' %>">
                  <%= invoice.status || 'Pending' %>
                </span>
              <% end %>
            </div>

            <%= render invoice %>

            <div class="invoice-actions">
              <%= link_to "👁️ Show", invoice, class: "btn btn-info btn-sm" %>
              <%= link_to "📄 Download PDF", 
                    invoice_path(invoice, format: :pdf),
                    class: "btn btn-primary btn-sm",
                    target: "_blank" %>
              <% if invoice.respond_to?(:editable?) && invoice.editable? %>
                <%= link_to "✏️ Edit", edit_invoice_path(invoice), class: "btn btn-success btn-sm" %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="empty-state">
          <h3>No invoices found</h3>
          <p>Create your first invoice to get started.</p>
          <%= link_to "Create Invoice", new_invoice_path, class: "btn btn-success", style: "margin-top: 16px;" %>
        </div>
      <% end %>
    </div>
  </div>
</div>