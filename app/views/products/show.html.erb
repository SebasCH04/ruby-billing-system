<p style="color: green"><%= notice %></p>

<h2>Product</h2>
<%= render @product %>

<h2>Stock History</h2>
<ul>
  <% @product.stock_movements.order(occurred_at: :desc).each do |m| %>
    <li>
      <%= m.occurred_at.strftime("%d/%m/%Y %H:%M") %>:
      <strong><%= m.quantity %></strong>
      â€” <%= m.note %>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "Edit this product", edit_product_path(@product), class: "btn btn-sm btn-warning" %> |
  <%= link_to "Back to products", products_path, class: "btn btn-sm btn-secondary" %> |
  <%= button_to "Destroy this product", @product,
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "btn btn-sm btn-danger" %>
</div>