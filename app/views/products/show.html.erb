<p style="color: green"><%= notice %></p>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
  }

  .modern-container {
    max-width: 1000px;
    margin: 20px auto;
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .modern-header {
    background: white;
    padding: 30px 40px;
    border-bottom: 1px solid #e5e7eb;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .modern-header h2 {
    color: #1f2937;
    font-size: 28px;
    font-weight: 600;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .modern-content {
    padding: 40px;
  }

  .product-info-section {
    background: #f8fafc;
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 30px;
  }

  .stock-history-section {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 30px;
  }

  .section-title {
    color: #1f2937;
    font-size: 20px;
    font-weight: 600;
    margin: 0 0 20px 0;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .stock-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .stock-item {
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 16px 20px;
    margin-bottom: 12px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.2s ease;
  }

  .stock-item:hover {
    background: #f3f4f6;
    transform: translateX(4px);
  }

  .stock-item:last-child {
    margin-bottom: 0;
  }

  .stock-datetime {
    color: #6b7280;
    font-size: 14px;
    font-weight: 500;
  }

  .stock-quantity {
    font-weight: 700;
    color: #059669;
    font-size: 16px;
    padding: 4px 12px;
    background: #d1fae5;
    border-radius: 20px;
  }

  .stock-quantity.negative {
    color: #dc2626;
    background: #fee2e2;
  }

  .stock-note {
    color: #374151;
    font-size: 14px;
    flex: 1;
    margin-left: 16px;
  }

  .stock-details {
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }

  .stock-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .btn {
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-align: center;
  }

  .btn:hover {
    transform: translateY(-1px);
    text-decoration: none;
  }

  .btn-primary {
    background: #3b82f6;
    color: white;
  }

  .btn-primary:hover {
    background: #2563eb;
    color: white;
  }

  .btn-secondary {
    background: #6b7280;
    color: white;
  }

  .btn-secondary:hover {
    background: #4b5563;
    color: white;
  }

  .btn-success {
    background: #10b981;
    color: white;
  }

  .btn-success:hover {
    background: #059669;
    color: white;
  }

  .btn-warning {
    background: #f59e0b;
    color: white;
  }

  .btn-warning:hover {
    background: #d97706;
    color: white;
  }

  .btn-danger {
    background: #ef4444;
    color: white;
  }

  .btn-danger:hover {
    background: #dc2626;
    color: white;
  }

  .btn-sm {
    padding: 8px 16px;
    font-size: 13px;
  }

  /* Fixed action buttons styling */
  .action-buttons {
    display: flex;
    gap: 12px;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    padding: 30px 40px;
    background: #f8fafc;
    border-top: 1px solid #e5e7eb;
    border-radius: 0 0 12px 12px;
  }

  .empty-state {
    text-align: center;
    padding: 40px 20px;
    color: #6b7280;
  }

  .empty-state h3 {
    color: #374151;
    margin-bottom: 8px;
  }

  .product-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
  }

  .detail-item {
    background: white;
    padding: 16px;
    border-radius: 8px;
    border: 1px solid #e5e7eb;
  }

  .detail-label {
    font-size: 12px;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
  }

  .detail-value {
    font-weight: 600;
    color: #1f2937;
    font-size: 16px;
  }

  @media (max-width: 768px) {
    .modern-header {
      flex-direction: column;
      text-align: center;
    }

    .modern-content {
      padding: 20px;
    }

    .product-info-section,
    .stock-history-section {
      padding: 20px;
    }

    .action-buttons {
      flex-direction: column;
      align-items: center;
      padding: 20px;
    }

    .action-buttons .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }

    .stock-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }

    .stock-info {
      width: 100%;
      justify-content: space-between;
    }

    .product-details {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="modern-container">
  <div class="modern-header">
    <h2>📦 Product Details</h2>
  </div>

  <div class="modern-content">
    <!-- Product Information Section -->
    <div class="product-info-section">
      <div class="section-title">
        📋 Product Information
      </div>
      <%= render @product %>
    </div>

    <!-- Stock History Section -->
    <div class="stock-history-section">
      <div class="section-title">
        📊 Stock Movement History
      </div>
      
      <% if @product.stock_movements.any? %>
        <ul class="stock-list">
          <% @product.stock_movements.order(occurred_at: :desc).each do |m| %>
            <li class="stock-item">
              <div class="stock-info">
                <div class="stock-datetime">
                  <%= m.occurred_at.strftime("%d/%m/%Y %H:%M") %>
                </div>
                <div class="stock-quantity <%= m.quantity.to_i < 0 ? 'negative' : '' %>">
                  <%= m.quantity > 0 ? '+' : '' %><%= m.quantity %>
                </div>
              </div>
              <div class="stock-note">
                <%= m.note %>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="empty-state">
          <h3>No stock movements yet</h3>
          <p>Stock changes will appear here when they occur.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Fixed Action Buttons -->
  <div class="action-buttons">
    <%= link_to "← Back to Products", products_path, class: "btn btn-secondary" %>
    <%= link_to "✏️ Edit Product", edit_product_path(@product), class: "btn btn-warning" %>
    <%= button_to "🗑️ Delete Product", @product,
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this product? This action cannot be undone." },
                  class: "btn btn-danger" %>
  </div>
</div>

<!-- Enhanced styling for the rendered product partial -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add modern styling to any existing product details
    const productContainer = document.querySelector('.product-info-section');
    
    // Style any definition lists or product details
    const dts = productContainer.querySelectorAll('dt');
    const dds = productContainer.querySelectorAll('dd');
    
    dts.forEach(dt => {
      dt.style.fontSize = '12px';
      dt.style.color = '#6b7280';
      dt.style.textTransform = 'uppercase';
      dt.style.letterSpacing = '0.5px';
      dt.style.marginBottom = '4px';
      dt.style.fontWeight = '500';
    });
    
    dds.forEach(dd => {
      dd.style.fontWeight = '600';
      dd.style.color = '#1f2937';
      dd.style.fontSize = '16px';
      dd.style.marginBottom = '16px';
    });

    // If there are paragraphs, style them nicely
    const paragraphs = productContainer.querySelectorAll('p');
    paragraphs.forEach(p => {
      p.style.marginBottom = '12px';
      p.style.color = '#374151';
      p.style.lineHeight = '1.5';
    });
  });
</script>