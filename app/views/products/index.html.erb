<% content_for :title, "Products" %>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
                 Ubuntu, Cantarell, sans-serif;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    margin: 0;
    padding: 20px;
    min-height: 100vh;
  }

  .modern-container {
    max-width: 1200px;
    margin: 0 auto;
    background: #ffffff;
    border-radius: 12px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  .modern-header {
    background: #ffffff;
    padding: 30px 40px;
    border-bottom: 1px solid #e5e7eb;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .modern-header h2 {
    color: #1f2937;
    font-size: 28px;
    font-weight: 600;
    margin: 0;
  }

  .modern-content {
    padding: 40px;
  }

  .modern-secondary-actions {
    display: flex;
    gap: 12px;
    margin-bottom: 30px;
    flex-wrap: wrap;
  }

  .btn {
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .btn-primary { background: #3b82f6; color: white; }
  .btn-secondary { background: #6b7280; color: white; }
  .btn-success { background: #10b981; color: white; }
  .btn-info    { background: #06b6d4; color: white; }
  .btn-danger  { background: #ef4444; color: white; }
  .btn:hover   { transform: translateY(-1px); }

  .btn-sm { padding: 6px 12px; font-size: 12px; }

  .modern-table-container {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }

  .table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 0;
  }

  /* HEADER CON BORDES SUPERIORES */
  .table thead {
    background: #f8fafc;
  }

  .table thead th {
    padding: 16px 24px;
    font-weight: 600;
    color: #374151;
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    border-bottom: 2px solid #e5e7eb;
  }

  /* FILAS, SEPARACIÃ“N Y HOVER */
  .table tbody tr {
    border-bottom: 1px solid #e5e7eb;
    transition: background-color 0.2s ease;
  }

  .table tbody tr:hover {
    background: #f9fafb;
  }

  .table tbody tr.table-danger {
    background: #fef2f2;
  }
  .table tbody tr.table-danger:hover {
    background: #fecaca;
  }

  /* CELDAS */
  .table td {
    padding: 16px 24px;
    font-size: 14px;
    color: #374151;
  }

  .text-center { text-align: center; }
  .text-end    { text-align: right; }

  .modern-price {
    font-weight: 600;
    color: #059669;
  }

  .modern-sku {
    font-family: 'Courier New', monospace;
    background: #f3f4f6;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 13px;
  }

  .badge {
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .bg-success { background: #d1fae5; color: #065f46; }
  .bg-danger  { background: #fee2e2; color: #991b1b; }

  .modern-actions {
    display: flex;
    gap: 6px;
    justify-content: center;
  }
</style>

<div class="modern-container">
  <div class="modern-header">
    <h2>Product Management Software</h2>
    <%= link_to "+ Add Product", new_product_path, class: "btn btn-success" %>
  </div>

  <div class="modern-content">
    <div class="modern-secondary-actions">
      <%= link_to "ðŸ“„ Show/Create Invoices", invoices_path, class: "btn btn-primary" %>
      <%= link_to "ðŸ’° Change Tax Rates",    tax_rates_path, class: "btn btn-secondary" %>
      <%= link_to "ðŸ‘¥ Manage Clients",      clients_path, class: "btn btn-secondary" %>
    </div>

    <div class="modern-table-container">
      <div class="table-responsive">
        <table class="table align-middle mb-0">
          <thead>
            <tr>
              <th>Name</th>
              <th>SKU</th>
              <th class="text-end">Price</th>
              <th class="text-center">Stock</th>
              <th class="text-center">Threshold</th>
              <th class="text-center">Status</th>
              <th class="text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |product| %>
              <% low = product.stock_quantity < product.reorder_threshold %>
              <tr class="<%= low ? 'table-danger' : '' %>">
                <td><%= product.name %></td>
                <td><span class="modern-sku"><%= product.sku %></span></td>
                <td class="text-end modern-price">
                  <%= number_to_currency(product.price) %>
                </td>
                <td class="text-center"><%= product.stock_quantity %></td>
                <td class="text-center"><%= product.reorder_threshold %></td>
                <td class="text-center">
                  <span class="badge <%= low ? 'bg-danger' : 'bg-success' %>">
                    <%= low ? 'Low Stock' : 'In Stock' %>
                  </span>
                </td>
                <td class="text-center">
                  <div class="modern-actions">
                    <%= link_to "Edit",    edit_product_path(product), method: :get,
                                      class: "btn btn-success btn-sm" %>
                    <%= link_to "Details", product_path(product),         method: :get,
                                      class: "btn btn-info    btn-sm" %>
                    <%= link_to "Delete",  product_path(product),         method: :delete,
                                      data: { confirm: "Are you sure?" },
                                      class: "btn btn-danger  btn-sm" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
